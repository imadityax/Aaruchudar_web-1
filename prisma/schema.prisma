generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CEO
  EXECUTIVE_DIRECTOR
  MANAGER
  TEAM_LEADER
  EMPLOYEE
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String?  // nullable for non-login users
  role      Role


  createdAt DateTime @default(now())
}



model Feedback {
  id        String   @id @default(cuid())
  name      String
  email     String
  rating    Int
  text      String
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Application {
  id              String   @id @default(cuid())
  name            String
  dob             DateTime
  gender          String
  contact         String
  email           String
  educationStatus String
  institution     String
  field           String
  board           String
  percentage      Float
  createdAt       DateTime @default(now())
}

model InternshipRegistration {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  course    String
  duration  String
  message   String?
  createdAt DateTime @default(now())
}
model Student {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  age       Int?
  createdAt DateTime @default(now())

  attempts  ExamAttempt[] @relation("StudentAttempts")
}

model ExamAttempt {
  id             String   @id @default(uuid())

  studentId      String
  student        Student  @relation("StudentAttempts", fields: [studentId], references: [id])

  totalQuestions Int
  answeredCount  Int
  skippedCount   Int
  totalSections  Int

  score          Int
  percentage     Int
  timeTakenSec   Int

  createdAt      DateTime @default(now())
}

